{%- style -%}
    .richtext-fields-container{
        display: flex;
        justify-content: center;
        align-items:center;
        margin: 30px 0;
    }
    .richtext-fields-block{
        width: 200px;
        height: 70px;
        color: #A9A9A9;
        overflow: hidden;
        margin: 30px;
        padding: 0;
        display: flex;

    }
    p{
        display: flex;
        justify-content: center;
        align-items:center;
    }
    .number{
        font-size: 70px;
    }

    .richtext + p{
        font-size: 0.8em;
    }

    @media only screen and (max-width: 1150px){
        .richtext-fields-block{
            margin-left: 20px;
            height: 60px;
            width: 180px;            
        }
        .number{
            font-size: 60px;
        }
        .richtext + p{
            word-break: break-word;
            font-size: 0.7em;
        }
    }
    @media only screen and (max-width: 765px){
        .richtext-fields-container{
            flex-direction: column;
        }
        .richtext-fields-block{
            margin-top: 30px;
        }
    }

{%- endstyle -%}

<div class="richtext-fields-container">
    {%- for block in section.blocks -%}
        <div class="richtext-fields-block">
            <p class="number">
                {{ forloop.index }}.
            </p>
            <p class="richtext">
                {{ block.settings.richtext }}
            </p>
        </div>
    {%- endfor -%}
</div>

{% schema %}
  {
    "name": "Richtext Fields",
    "max_blocks": 5,
    "blocks": [
        {
            "type": "richtext",
            "name": "Text",
            "limit": 5,
            "settings": [
                {
                    "type": "richtext",
                    "id": "richtext",
                    "label": "Text input"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Richtext Fields"
        }
    ]
  }
{% endschema %}